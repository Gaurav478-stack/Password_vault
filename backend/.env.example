# MongoDB connection string (replace with your actual connection string)
MONGO_URI=mongodb://localhost:27017/securepass

# Server port
PORT=5500

# Secret key for password encryption (generate a random 64-character hex string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SECRET_KEY=your-32-byte-secret-key-in-hex-format-change-this-in-production

# JWT secret for authentication tokens (generate a random 64-character hex string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-jwt-secret-key-change-this-in-production
